.question-tracker
  .form
    = form_for(@question_tracker) do |f|
      .row.name
        =f.label :name
        =f.text_field :name
      .row.description
        =f.label :description
        =f.text_area :description
      .row.save-and-cancel
        %span.save
          =f.submit :save
        %span.cancel
          =f.submit :cancel
  .use_count=@question_tracker.use_count
  .master-question
    .type=@question_tracker.type
    .info=@question_tracker.master_question_info
