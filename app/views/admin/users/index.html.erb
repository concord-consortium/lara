<h1>Listing Users</h1>

<div class="users">
  <%= will_paginate @users %>

  <form class="search" method="get">
    <lable>Search</lable>
    <input type="text" id="q" name="q" placeholder="user@host"/>
    <input type="submit" value="submit"/>
  </form>

  <table>
    <tr>
      <th>User</th><th></th><th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @users %>
</div>