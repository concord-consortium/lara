:ruby
  # These strings are configured in 'config/locales/en.yml'
  next_activity      = @sequence.next_activity(@page.lightweight_activity) if @sequence
  report_path        = summary_with_response_path(@page.lightweight_activity, @session_key) if @session_key
  page_name          = @page.name || @activity.name + ":#{@page.position}"
  exit_link          = @sequence ? sequence_path(@sequence, show_index: true) : activity_path(@activity, show_index: true)
  completed_activity = @run && @run.completed?
  last_activity      = @sequence && !next_activity
  completed_sequence = @sequence_run && @sequence_run.completed?
  completed_material = completed_activity || completed_sequence
  material_thumbnail = completed_sequence ? @sequence.thumbnail_url : @activity.thumbnail_url
  material_name      = completed_sequence ? @sequence.title : @activity.name

  complete_header_t   = t("COMPLETION_PAGE.HEADER", {activity: @activity.name})
  congratulations_t   = t("COMPLETION_PAGE.CONGRATULATIONS")
  finished_activity_t = t('COMPLETION_PAGE.FINISHED_ACTIVITY', activity: @activity.name)
  not_finished_activity_t = t('COMPLETION_PAGE.UNFINISHED_ACTIVITY', activity: @activity.name)
  exit_completed_material_t     = t('COMPLETION_PAGE.EXIT_COMPLETED_MATERIAL', material: material_name)
  exit_non_completed_material_t = t('COMPLETION_PAGE.EXIT_NON_COMPLETED_MATERIAL', material: material_name)
  if last_activity && completed_activity && !completed_sequence
    exit_last_activity_t = t('COMPLETION_PAGE.EXIT_LAST_ACTIVITY', activity: @activity.name, sequence: @sequence.name)
  end

  finished_sequence_t = t('COMPLETION_PAGE.FINISHED_SEQUENCE')
  generate_report_t   = t("COMPLETION_PAGE.GENERATE_A_REPORT")
  start_next_t        = t("COMPLETION_PAGE.START_NEXT")
  exit_label_t        = t("COMPLETION_PAGE.EXIT_LABEL")
  next_up_t           = t("COMPLETION_PAGE.NEXT_UP")


- content_for :title do
  = page_name

.intro-mod
  - if completed_activity
    %h4.h4= complete_header_t

-# Control layout here. Add one of the following classes: l-full-width, l-6040, l-7030, r-6040, r-7030
.content-mod{ :class => 'l-full-width' }
  .ui-block-1
    .congratulations-block
      %div
        - if completed_activity
          %i.fa.fa-check-square-o.fa-2x
          %span.congratulations=congratulations_t
          %span.finished-activity=finished_activity_t
          - if completed_sequence
            %span.finished-sequence=finished_sequence_t
        - else
          %span.unfinished-activity=not_finished_activity_t
      .submit.report
        %a{:href => report_path, :class => 'gen-report', :target => 'new' }
          %input{ :class => 'button', :type => 'submit', :value => generate_report_t }

    .bottom-block
      .image-preview
        - if next_activity && next_activity.thumbnail_url.present?
          %img{src: next_activity.thumbnail_url, alt: next_activity.name}
        - elsif material_thumbnail.present?
          - if completed_material
            .ribbon_wrap
              = ribbon(t("COMPLETED"), "my-ribbon")
          %img{src: material_thumbnail, alt: material_name}

      .description
        - if next_activity
          %h1= next_up_t
          %h2.h2= next_activity.name
          = next_activity.description.html_safe
          .finish-links
            %a{ :href => sequence_activity_path(@sequence, next_activity, show_index: true)}
              %input.button{ :type => "submit", :value => start_next_t}
            or
            %a.exit{:href => exit_link}=exit_label_t
        - else
          %p
            - if last_activity && completed_activity && !completed_sequence
              = exit_last_activity_t
            - else
              = completed_material ? exit_completed_material_t : exit_non_completed_material_t
          .finish-links
            %a.exit{:href => exit_link}
              %input{ :class => 'button exit-btn', :type => 'submit', :value => exit_label_t }

:sass
