:scss
  .arg-block {
    margin-bottom: 10px;
    border: 5px solid gray; // color is going to be overwritten by JS
    box-shadow: 2px 2px 2px #aaa;

    .question-bd {
      margin-bottom: 15px;
    }

    &:after {
      // Keeps submit button within argumentation block.
      display: table;
      content: "";
      clear: both;
    }
  }

  .ab-submit {
    float: right;
    margin: 12px 12px 12px 0 !important;
  }

  .ab-feedback-header {
    border: 1px solid #eee;
    padding: 12px 22px;
  }

  .ab-robot-wrap {
    margin:0 auto;
    td {
      padding: 0 10px;
      vertical-align: middle;
    }

    .ab-robot-figure {
      width: 85px;
      height: 109px;
      background-image: url('/assets/c-rater/hasbot-final-single.png');
      background-repeat: no-repeat;
      margin: 0 auto;
    }
  }

  .ab-feedback {
    clear: both;
    border: 1px solid #eee;
    border-radius: 10px;
    padding: 5px 5px 5px 5px;

    .ab-feedback-text {

      margin:10px 0 0 0;

      table {
        td {
          padding: 0 10px;
          vertical-align: middle;
        }
      }
    }
  }

  .ab-dirty {
    color: #BD6161;
    padding: 3px 0 0 4px;
    font-size: 12px;
    border-radius: 6px;
    margin: 0 0 2px -7px;

    .did_try_to_navigate & {
      background: #FFDCDC;
    }
  }

  .ab-feedback-on-feedback {
    // !important to overwrite .question properties.
    margin: 0 !important;
    width: 100% !important;
    padding: 15px !important;
    text-align: center;
    background: rgba(0, 0, 0, 0.05);

    div {
      text-align: left;
    }

    &.did_try_to_navigate {
      background: rgba(255, 0, 0, 0.2);
    }
  }


  .ab-feedback-item{
    .ab-robot-scale{
      width: 330px;
      background-repeat: no-repeat;
      height: 50px;
      background-size: contain;
      &.max-score-4 {
        background-image: url('/assets/c-rater/4pt-scale.png');
        &.score-0 { background-image: url('/assets/c-rater/0-4pt-scale.png'); }
        &.score-1 { background-image: url('/assets/c-rater/1-4pt-scale.png'); }
        &.score-2 { background-image: url('/assets/c-rater/2-4pt-scale.png'); }
        &.score-3 { background-image: url('/assets/c-rater/3-4pt-scale.png'); }
        &.score-4 { background-image: url('/assets/c-rater/4-4pt-scale.png'); }
      }
      &.max-score-6 {
        background-image: url('/assets/c-rater/6pt-scale.png');
        &.score-0 { background-image: url('/assets/c-rater/0-6pt-scale.png'); }
        &.score-1 { background-image: url('/assets/c-rater/1-6pt-scale.png'); }
        &.score-2 { background-image: url('/assets/c-rater/2-6pt-scale.png'); }
        &.score-3 { background-image: url('/assets/c-rater/3-6pt-scale.png'); }
        &.score-4 { background-image: url('/assets/c-rater/4-6pt-scale.png'); }
        &.score-5 { background-image: url('/assets/c-rater/5-6pt-scale.png'); }
        &.score-6 { background-image: url('/assets/c-rater/6-6pt-scale.png'); }
      }
    }
  }

  .ab-submit-prompt {
    float: right;
    margin: 15px 5px;
    padding: 5px;
    color: #BD6161;
  }
