.table-wrap
  %table
    %tr.feedback-title
      %td.left
        = f.label "Title", class: 'required'
      %td.right
        = f.text_field :description,:placeholder => 'Enter Title text'
    %tr.sub-header
      %td.left
        Score
      %td.right
        Score mapping text
    %tr.score
      %td.left
        = f.label "0"
      %td.right
        = f.text_area :score0, :rows => "1",:cols => "100", :class => 'wysiwyg'
    %tr.score
      %td.left
        = f.label "1"
      %td.right
        = f.text_area :score1, :rows => "1",:cols => "100", :class => 'wysiwyg'
