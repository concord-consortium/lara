- embeddable_string = "#{embeddable.class.to_s.demodulize.underscore}_#{embeddable.id}"
.question-hdr
  %h5.h5= embeddable.name
.question-bd{ :id => embeddable_string }
  .question-txt
    != embeddable.prompt
  = form_for embeddable,
    :remote => true,
    :html => {:'data-type' => 'json'} do |f|
    %fieldset.options.live-update
      - embeddable.choices.each do |choice|
        %label{ :for => "embeddable_multiple_choice_answer_answers_#{choice.id}" }
          = f.radio_button :answers, choice.id, :class => 'live_submit', :checked => (embeddable.answers.include?(choice))
          = choice.choice
  -# TODO: use unobtrusive JS here instead of onclick
  %input{ :class => 'button',
          :type => 'button',
          :value => 'Check answer',
          :id => 'check',
          :disabled => !(embeddable.answers.length > 0),
          :onclick => "checkAnswer('#{embeddable_string}');" }
