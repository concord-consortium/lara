= form_for @embeddable do |f|
  = f.error_messages
  = field_set_tag 'Heading' do
    = f.text_field :name
  = field_set_tag 'Content' do
    = f.text_area :content, :rows => 5, :class => 'wysiwyg-minimal', :style => 'display: block'
  .options
    = field_set_tag "Options" do
      .ul
        = render :partial => 'shared/edit_full_width', :locals => { :f => f }
  = f.submit "Cancel", :class => 'close'
  = f.submit "Save", :class => 'embeddable-save'

  :javascript
    $(function() {
      $("wysiwyg, .wysiwyg-minimal").each(function (index) {
        initSlateEditor($(this), $(this).text(), index);
      });
    });
