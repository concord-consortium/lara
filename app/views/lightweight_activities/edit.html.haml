%h1 Edit activity
= form_for @activity, {:url => "/lightweight/activities/#{@activity.id}", :method => 'put'} do |f|
  = render :partial => 'form', :locals => {:f => f}
= javascript_tag("focus_first_field();");
%ul
  %li= link_to "Add pages to this activity", new_activity_page_path(@activity)
  - if @activity.pages.length > 0
    %li
      Edit pages:
      %ul
        - @activity.pages.each do |p|
          %li{ :id => dom_id_for(p, :item), :class => 'item' }
            %div.action_menu
              %div.action_menu_header_left
                = link_to p.name, edit_activity_page_path(@activity, p)
              %div.action_menu_header_right
                %ul.menu
                  %li= link_to "Edit", edit_activity_page_path(@activity, p)
                  %li= link_to "Show", activity_page_path(@activity, p), :target => 'new'
                  %li= link_to "Delete", activity_page_path(@activity, p), method: :delete, data: { confirm: 'Are you sure?' }

  %li= link_to "All activities", activities_path