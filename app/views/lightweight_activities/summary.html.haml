.summary-mod
  = content_for :title do
    = "Response Summary for #{@activity.name}"

  %p.summary-instructions The activity questions are shown in bold and your answers are presented in order below.

  %h2.h2= @activity.name
  - if @sequence
    %h3= "in #{@sequence.title}"
  - @answers.each_with_index do |answer,index|
    .prompt
      %span.number= "#{index +1}: "
      %span.text
        = Nokogiri::HTML(answer.prompt).text
    = render :partial => "#{answer.class.name.underscore.pluralize}/summary",
      :locals => {:answer => answer, :index => index}

= render :partial => 'shared/share_popup'

:javascript
  $(function(){
    $('#nav-activity-menu li:visible:first').css('border-left','none')
    $('#nav-activity-menu li:visible:last').css('border-bottom','none')
    $('.summary-actions').css('display','block')
  })

:scss
  #nav-activity-menu {
    background-color: initial;
    border: none;
    margin-right: 200px;
    .am-report,.am-about,.am-help,.am-close {
      display: none;
    }
    .summary-actions {
      li {
        border-bottom:none;
        a {
          .fa {
            display: none
          }
          .text {
            display: block;
          }
        }
      }
    }
  }

  #nav-activity-menu-container {
    #nav-activity-menu  {
      ul li.am-home {
        display: none;
      }
    }
  }
