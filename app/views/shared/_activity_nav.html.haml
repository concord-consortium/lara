.activity-nav-logo.ui-block-1
  .nav-menu
    MENU
    %ul.nav-menu-top
      - if @sequence
        - @sequence.lightweight_activities_sequences.each do |las|
          - activity = las.lightweight_activity
          %li.activity
            = link_to "#{las.position.to_s}. #{activity.name}", sequence_activity_path(@sequence, activity)
            - if @activity == activity
              %ul.pages.in-sequence
                = render :partial => 'shared/nav_page_list', :locals => { :pages => @activity.pages }
      - else
        %ul.pages.in-activity
          = render :partial => 'shared/nav_page_list', :locals => { :pages => @activity.pages }

  %h2.h2
    = @activity.name
%nav.activity-nav.ui-block-2
  -if @page
    - next_href = @page.lower_item.nil? ? nil : activity_page_path(@page.lightweight_activity, @page.lower_item)
    - previous_href = @page.higher_item.nil? ? nil : activity_page_path(@page.lightweight_activity, @page.higher_item)
    %a.next{ :class => ('disabled' if @page.lower_item.nil?), :href => next_href }
    %a.prev{ :class => ('disabled' if @page.higher_item.nil?), :href => previous_href }

  .pages
    %ul.pagination
      %li.pagination-item.home-link
        = link_to 'H', activity_path(@activity), :class => @page.blank? ? 'pagination-link selected' : 'pagination-link'
      - page_counter = 1
      - @activity.pages.each do |p|
        %li.pagination-item
          = link_to page_counter, activity_page_path(@activity, p), :class => (p === @page) ? 'pagination-link selected' : 'pagination-link'
          - page_counter = page_counter + 1
