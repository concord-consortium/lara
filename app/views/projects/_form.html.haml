= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :logo
    %br
    = f.text_field :logo
  .field
    = f.label :url
    %br
    = f.text_field :url
  .field
    = f.label :footer
    %br
    = f.text_area :footer, { :class => 'wysiwyg-text', :cols => 80, :rows => 10 }
  .field
    = f.label :about
    %br
    = f.text_area :about, { :class => 'wysiwyg-text', :cols => 80, :rows => 10 }
  .field
    = f.label :help
    %br
    = f.text_area :help, { :class => 'wysiwyg-text', :cols => 80, :rows => 10 }
  .field
    = f.label :theme, "Default theme"
    %br
    = f.select :theme_id, options_from_collection_for_select(Theme.all, 'id', 'name', @project.theme_id), { :include_blank => "None (use site default)" }
  .actions
    = f.submit
