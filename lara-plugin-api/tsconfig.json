{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["jest", "jquery", "jqueryui"],
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
